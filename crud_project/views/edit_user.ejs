<%- include('layout/header') %>
<br><br><br>
<div class="container">
    <div class="row">
        <form action="/update/<%= user._id %>" method="post" id="adduser" enctype="multipart/form-data" style="border: 3px solid #ccc; padding: auto;"><br>
            <center><h2>Edit User (<%= user.name  %>)</h2></center><br>
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="Enter Your Name" id="name" value="<%= user.name %>" name="name" aria-describedby="name">
            </div>
            <div class="mb-3">
              <input type="email" class="form-control" placeholder="Enter Your Email" id="email" value="<%= user.email %>" name="email" aria-describedby="email">
            </div>
            <div class="mb-3">
                <input type="phone" class="form-control" placeholder="Enter Your Phone Number" id="phone" value="<%= user.phone %>" name="phone" aria-describedby="phone">
            </div>
            <div class="mb-3">
                <input class="form-control" type="file" id="image" name="image">
                <img src="/<%= user.image %>" width="200" class="img-thumbnail" alt="<%= user.image %>">
                <img type="hidden" name="old_image" value="<%= user.image %>">
            </div>
            <div class="mb-3">
              <input type="text" class="form-control" id="password" value="<%= user.password %>" name="password" placeholder="Enter Your Password">
              
            </div>
            <button type="submit" name="submit" class="btn btn-success">Update</button><br>
            <div style="padding-bottom:20px;"></div>
          </form>
    </div>
</div>




<%- include('layout/footer') %>